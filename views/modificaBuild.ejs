<!DOCTYPE html>
<html lang="it">

<head>
	<title>Modifica Build Genshin</title>
	<link rel="icon" href="images/icona.webp" />
	<meta charset="utf-8">
	<link rel="stylesheet" href="../css/profilo.css">
	<link rel="stylesheet" href="../css/creaSetArt.css">
	<link rel="stylesheet" href="../css/style.css">
	<link rel="stylesheet" href="../css/footer.css">
	<link rel="stylesheet" href="../css/modificabuild.css">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="colore-sfondo">
	<%- include('navbar-noRIc.ejs') %>
	<div class="container">
		<form action="/profilo/modificaBuild/<%= build.id_build %>" method="POST">
			<div class="row">
				<!-- Colonna sinistra: Artefatti -->
				<div class="col-lg-4 col-md-12">
					<div class="container-small">
						<h1 class="page-title">Modifica Set Artefatti</h1>
						<div class="white-box">
							<div class="form-group">
								<label for="nome_set" class="form-label">Nome Set:</label>
								<input type="text" id="nome_set" name="nome_set" class="form-input" value="<%= build.nome_set %>" required>
							</div>

							<div class="form-group">
								<label for="descrizione" class="form-label">Statistiche principali:</label>
								<textarea id="descrizione" name="descrizione" rows="4" class="form-textarea"><%= build.descrizione %></textarea>
							</div>

							<div class="artifact-selection">
								<!-- Fiore -->
								<div class="form-group">
									<label for="fiore" class="form-label">Fiore:</label>
									<div class="select-with-img">
										<img id="fiore-img" src="<%= build.fiore_img %>" alt="Anteprima fiore">
										<div class="select-container">
											<select id="fiore" name="fiore" class="form-select">
												<option value="<%= build.fiore_id %>" data-img="<%= build.fiore_img %>" selected>
													<%= build.fiore_nome %> (attuale)
												</option>
												<% categorie_artefatti.fiore.forEach(a => { %>
												<option value="<%= a.id %>" data-img="<%= a.immagine %>"><%= a.nome %></option>
												<% }) %>
											</select>
										</div>
									</div>
								</div>

								<!-- Piuma -->
								<div class="form-group">
									<label for="piuma" class="form-label">Piuma:</label>
									<div class="select-with-img">
										<img id="piuma-img" src="<%= build.piuma_img %>" alt="Anteprima piuma">
										<div class="select-container">
											<select id="piuma" name="piuma" class="form-select">
												<option value="<%= build.piuma_id %>" data-img="<%= build.piuma_img %>" selected>
													<%= build.piuma_nome %> (attuale)
												</option>
												<% categorie_artefatti.piuma.forEach(a => { %>
												<option value="<%= a.id %>" data-img="<%= a.immagine %>"><%= a.nome %></option>
												<% }) %>
											</select>
										</div>
									</div>
								</div>

								<!-- Clessidra -->
								<div class="form-group">
									<label for="clessidra" class="form-label">Clessidra:</label>
									<div class="select-with-img">
										<img id="clessidra-img" src="<%= build.clessidra_img %>" alt="Anteprima clessidra">
										<div class="select-container">
											<select id="clessidra" name="clessidra" class="form-select" required>
												<option value="<%= build.clessidra_id %>" data-img="<%= build.clessidra_img %>" selected>
													<%= build.clessidra_nome %> (attuale)
												</option>
												<% categorie_artefatti.clessidra.forEach(a => { %>
												<option value="<%= a.id %>" data-img="<%= a.immagine %>"><%= a.nome %></option>
												<% }) %>
											</select>
										</div>
									</div>
								</div>

								<!-- Coppa -->
								<div class="form-group">
									<label for="coppa" class="form-label">Coppa:</label>
									<div class="select-with-img">
										<img id="coppa-img" src="<%= build.coppa_img %>" alt="Anteprima coppa">
										<div class="select-container">
											<select id="coppa" name="coppa" class="form-select" required>
												<option value="<%= build.coppa_id %>" data-img="<%= build.coppa_img %>" selected>
													<%= build.coppa_nome %> (attuale)
												</option>
												<% categorie_artefatti.coppa.forEach(a => { %>
												<option value="<%= a.id %>" data-img="<%= a.immagine %>"><%= a.nome %></option>
												<% }) %>
											</select>
										</div>
									</div>
								</div>

								<!-- Corona -->
								<div class="form-group">
									<label for="corona" class="form-label">Corona:</label>
									<div class="select-with-img">
										<img id="corona-img" src="<%= build.corona_img %>" alt="Anteprima corona">
										<div class="select-container">
											<select id="corona" name="corona" class="form-select" required>
												<option value="<%= build.corona_id %>" data-img="<%= build.corona_img %>" selected>
													<%= build.corona_nome %> (attuale)
												</option>
												<% categorie_artefatti.corona.forEach(a => { %>
												<option value="<%= a.id %>" data-img="<%= a.immagine %>"><%= a.nome %></option>
												<% }) %>
											</select>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Colonna centrale: visibilità e gilda -->
				<div class="col-lg-4 col-md-6">

					<div class="container-small mt-3">
						<div class="white-box">
							<div class="form-group">
								<label for="pubblico" class="form-label">Cambia visibilità:</label>
								<select id="pubblico" name="pubblico" class="form-select" required>
									<option value="1" <%= build.pubblico ? 'selected' : '' %>>Pubblico</option>
									<option value="0" <%= !build.pubblico ? 'selected' : '' %>>Privato</option>
								</select>
							</div>
						</div>
					</div>

					<div class="container-small mt-3">
						<div class="white-box">
							<div class="form-group">
								<label for="gilda" class="form-label">Gilda:</label>
								<div class="select-with-img">
									<div class="select-container">
										<select id="gilda" name="gilda" class="form-select">
											<option value="-1">Nessuna Gilda</option>
											<% gilde.forEach(g => { %>
											<option value="<%= g.id %>" <%= g.id === build.gilda_id ? 'selected' : '' %>>
												<%= g.nome_gilda %>
											</option>
											<% }) %>
										</select>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				
				<!-- Colonna destra: Armi -->
				<div class="col-lg-4 col-md-6">
					<div class="container-small">
						<h1 class="page-title">Cambia Arma</h1>
						<div class="white-box">

							<!-- Arma attuale -->
							<div class="mb-3 current-weapon-box">
								<h5 class="section-title">Arma corrente:</h5>
								<div class="d-flex align-items-center">
									<% if (build.arma_immagine) { %>
									<img src="<%= build.arma_immagine %>" alt="<%= build.arma_nome %>" class="current-weapon-img">
									<% } %>
									<div class="ms-2">
										<p class="artifact-current mb-0"><%= build.arma_nome %></p>
										<small class="text-muted"><%= build.arma_tipo %></small>
									</div>
								</div>
							</div>


							<!-- Selezione nuova arma -->
							<div class="artifact-selection">
								<div class="form-group">
									<label for="arma" class="form-label">Scegli una nuova arma:</label>
									<div class="select-with-img">
										<div class="select-container">
											<select id="arma" name="arma" class="form-select" required>
												<option value="<%= build.arma_id %>" data-img="<%= build.arma_immagine %>" selected>
													<%= build.arma_nome %> (attuale)
												</option>
												<% armi.forEach(a => { %>
												<% if (a.id !== build.arma_id) { %>
												<option value="<%= a.id %>" data-img="<%= a.immagine %>">
													<%= a.nome_arma %>
												</option>
												<% } %>
												<% }) %>
											</select>
										</div>
									</div>
								</div>
							</div>
							
				</div>
				<div class="form-actions">
						<button type="submit" class="submit-button">Salva Modifiche</button>
						<a href="/profilo" class="btn btn-secondary">Annulla</a>
				</div>
			</div>
		</div>
	</div>
	<footer class="footer navbar-sfondo">
		<div class="container">
			<div class="row">
				<div class="col-md-3 align-items-center">
					<img src="images/icona.webp" class="footer-img">
				</div>
				<div class="col-md-3 align-items-center">
					<p class="footer-text">Build Genshin</p>
				</div>
				<div class="col-md-6 justify-content-end align-items-center">
					<p class="email-footer">Seguimi su instagram:</p>
					<p>matteo_dura</p>
					<p class="email-footer">Email:</p>
					<p>20050673@studenti.uniupo.it</p>
					<p class="email-footer">© 2024 Build Genshin. Tutti i diritti riservati.</p>
				</div>
			</div>
		</div>
	</footer>
</div>
<input type="hidden" name="id_set" value="<%= build.id_set %>">
