<!DOCTYPE html>
<html lang="it">
<head>
	<title>Build Genshin</title>
	<link rel="icon" href="images/icona.webp" />
	<meta charset="utf-8">
	<link rel="stylesheet" href="../css/profilo.css">
    <link rel="stylesheet" href="../css/creaSetArt.css">
	<link rel="stylesheet" href="../css/style.css">
	<link rel="stylesheet" href="../css/footer.css">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="colore-sfondo">
    <%- include('navbar-noRIc.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-12">
                <div class="container-small">
                        <h1 class="page-title">Crea il tuo Set di Artefatti</h1>

                        <form action="/set-artefatti/crea" method="POST" class="artifact-form">
                            <div class="form-group">
                                <label for="nome_set" class="form-label">Nome Set:</label>
                                <input type="text" id="nome_set" name="nome_set" class="form-input" required>
                            </div>

                            <div class="form-group">
                                <label for="descrizione" class="form-label">Descrizione:</label>
                                <textarea id="descrizione" name="descrizione" rows="4" class="form-textarea"></textarea>
                            </div>

                            <div class="artifact-selection">
                                <div class="form-group dropdown">
                                    <label for="fiore" class="form-label">Fiore:</label>
                                    <select id="fiore" name="fiore" class="form-select">
                                        <option value="">Seleziona</option>
                                        <% categorie.fiore.forEach(a => { %>
                                            <option value="<%= a.id %>"><%= a.nome %></option>
                                        <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="piuma" class="form-label">Piuma:</label>
                                    <select id="piuma" name="piuma" class="form-select">
                                        <option value="">Seleziona</option>
                                        <% categorie.piuma.forEach(a => { %>
                                            <option value="<%= a.id %>"><%= a.nome %></option>
                                        <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="clessidra" class="form-label">Clessidra:</label>
                                    <select id="clessidra" name="clessidra" class="form-select" required>
                                        <option value="">Seleziona</option>
                                        <% categorie.clessidra.forEach(a => { %>
                                            <option value="<%= a.id %>"><%= a.nome %></option>
                                        <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="coppa" class="form-label">Coppa:</label>
                                    <select id="coppa" name="coppa" class="form-select" required>
                                        <option value="">Seleziona</option>
                                        <% categorie.coppa.forEach(a => { %>
                                            <option value="<%= a.id %>"><%= a.nome %></option>
                                        <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="corona" class="form-label">Corona:</label>
                                    <select id="corona" name="corona" class="form-select" required>
                                        <option value="">Seleziona</option>
                                        <% categorie.corona.forEach(a => { %>
                                            <option value="<%= a.id %>"><%= a.nome %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="submit-button">Crea Set</button>
                            </div>
                        </form>
                    </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="container-small">
                        <h1 class="page-title">Scegli il Personaggio</h1>

                        <form action="/set-artefatti/crea" method="POST" class="artifact-form">
                            <div class="form-group">
                                    <label for="personaggi" class="form-label">Personaggi:</label>
                                    <select id="pesonaggi" name="personaggi" class="form-select">
                                        <option value="">Seleziona</option>
                                        <% personaggi.forEach(a => { %>
                                            <option value="<%= a.id %>"><%= a.nome %></option>
                                        <% }) %>
                                    </select>
                                </div>


                            <div class="form-group">
                                <label for="descrizione" class="form-label">Descrizione:</label>
                                <textarea id="descrizione" name="descrizione" rows="4" class="form-textarea"></textarea>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="submit-button">Aggiungi Personaggio</button>
                            </div>
                        </form>
                    </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="container-small">
                        <h1 class="page-title">Scegli un'Arma</h1>

                        <form action="/set-artefatti/crea" method="POST" class="artifact-form">
                            <div class="artifact-selection">
                                <div class="form-group">
                                    <label for="spada" class="form-label">Spada:</label>
                                    <select id="spada" name="spada" class="form-select">
                                        <option value="">Seleziona</option>
                                        <% armi.spada.forEach(a => { %>
                                            <option value="<%= a.id %>"><%= a.nome_arma %></option>
                                        <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="spadone" class="form-label">Spadone:</label>
                                    <select id="spadone" name="spadone" class="form-select" required>
                                        <option value="">Seleziona</option>
                                        <% armi.spadone.forEach(a => { %>
                                            <option value="<%= a.id %>"><%= a.nome_arma %></option>
                                        <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="catalizzatore" class="form-label">Catalizzatore:</label>
                                    <select id="catalizzatore" name="catalizzatore" class="form-select" required>
                                        <option value="">Seleziona</option>
                                        <% armi.catalizzatore.forEach(a => { %>
                                            <option value="<%= a.id %>"><%= a.nome_arma %></option>
                                        <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="lancia" class="form-label">Lancia:</label>
                                    <select id="lancia" name="lancia" class="form-select" required>
                                        <option value="">Seleziona</option>
                                        <% armi.lancia.forEach(a => { %>
                                            <option value="<%= a.id %>"><%= a.nome_arma %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="arco" class="form-label">Arco:</label>
                                    <select id="arco" name="arco" class="form-select" required>
                                        <option value="">Seleziona</option>
                                        <% armi.arco.forEach(a => { %>
                                            <option value="<%= a.id %>"><%= a.nome_arma %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="submit-button">Aggingi Arma</button>
                            </div>
                        </form>
                    </div>
            </div>
        </div>
    </div>
    
</body>
</html>
