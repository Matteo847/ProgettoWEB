<!DOCTYPE html>
<html lang="it">

<head>
    <title>Crea Build Genshin</title>
    <link rel="icon" href="images/icona.webp" />
    <meta charset="utf-8">
    <link rel="stylesheet" href="../css/profilo.css">
    <link rel="stylesheet" href="../css/creaSetArt.css">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/footer.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .select-with-img {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 15px;
        }
        .select-with-img img {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 4px;
            display: none; /* Nascondi inizialmente */
        }
        .select-container {
            flex-grow: 1;
        }
        .form-group {
            margin-bottom: 1rem;
        }
    </style>
</head>

<body class="colore-sfondo">
    <%- include('navbar-noRIc.ejs') %>
    <div class="container">
        <form action="/set-artefatti" method="POST">
            <div class="row">
                <div class="col-lg-4 col-md-12">
                    <div class="container-small">
                        <h1 class="page-title">Crea il tuo Set di Artefatti</h1>
                        <div class="white-box">
                            <div class="form-group">
                                <label for="nome_set" class="form-label">Nome Set:</label>
                                <input type="text" id="nome_set" name="nome_set" class="form-input" required>
                            </div>

                            <div class="form-group">
                                <label for="descrizione" class="form-label">Statistiche principali:</label>
                                <textarea id="descrizione" name="descrizione" rows="4" class="form-textarea"></textarea>
                            </div>

                            <div class="artifact-selection">
                                <div class="form-group">
                                    <label for="fiore" class="form-label">Fiore:</label>
                                    <div class="select-with-img">
                                        <img id="fiore-img" src="" alt="Anteprima fiore">
                                        <div class="select-container">
                                            <select id="fiore" name="fiore" class="form-select">
                                                <option value="">Seleziona un fiore</option>
                                                <% categorie.fiore.forEach(a => { %>
                                                    <option value="<%= a.id %>" data-img="<%= a.immagine %>">
                                                        <%= a.nome %>
                                                    </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="piuma" class="form-label">Piuma:</label>
                                    <div class="select-with-img">
                                        <img id="piuma-img" src="" alt="Anteprima piuma">
                                        <div class="select-container">
                                            <select id="piuma" name="piuma" class="form-select">
                                                <option value="">Seleziona una piuma</option>
                                                <% categorie.piuma.forEach(a => { %>
                                                    <option value="<%= a.id %>" data-img="<%= a.immagine %>">
                                                        <%= a.nome %>
                                                    </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="clessidra" class="form-label">Clessidra:</label>
                                    <div class="select-with-img">
                                        <img id="clessidra-img" src="" alt="Anteprima clessidra">
                                        <div class="select-container">
                                            <select id="clessidra" name="clessidra" class="form-select" required>
                                                <option value="">Seleziona una clessidra</option>
                                                <% categorie.clessidra.forEach(a => { %>
                                                    <option value="<%= a.id %>" data-img="<%= a.immagine %>">
                                                        <%= a.nome %>
                                                    </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="coppa" class="form-label">Coppa:</label>
                                    <div class="select-with-img">
                                        <img id="coppa-img" src="" alt="Anteprima coppa">
                                        <div class="select-container">
                                            <select id="coppa" name="coppa" class="form-select" required>
                                                <option value="">Seleziona una coppa</option>
                                                <% categorie.coppa.forEach(a => { %>
                                                    <option value="<%= a.id %>" data-img="<%= a.immagine %>">
                                                        <%= a.nome %>
                                                    </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="corona" class="form-label">Corona:</label>
                                    <div class="select-with-img">
                                        <img id="corona-img" src="" alt="Anteprima corona">
                                        <div class="select-container">
                                            <select id="corona" name="corona" class="form-select" required>
                                                <option value="">Seleziona una corona</option>
                                                <% categorie.corona.forEach(a => { %>
                                                    <option value="<%= a.id %>" data-img="<%= a.immagine %>">
                                                        <%= a.nome %>
                                                    </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="container-small">
                        <h1 class="page-title">Personaggio</h1>
                        <div class="white-box">
                            <div class="form-group">
                                <label class="form-label">Personaggio:</label>
                                <div class="select-with-img">
                                    <img id="personaggio-img" src="" alt="Anteprima personaggio">
                                    <div class="select-container">
                                        <select id="personaggio" name="personaggio" class="form-select" required>
                                            <option value="">Seleziona personaggio</option>
                                            <% personaggi.forEach(p => { %>
                                            <option value="<%= p.id %>" data-img="<%= p.immagine %>" data-tipo="<%= p.tipo.toLowerCase() %>">
                                                <%= p.nome %>
                                            </option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="submit-button">Crea Build</button>
                    </div>

                    <div class="container-small mt-3">
                        <div class="white-box">
                            <div class="form-group">
                                <label for="pubblico" class="form-label">Visibilità:</label>
                                <select id="pubblico" name="pubblico" class="form-select" required>
                                    <option value="1">Pubblico</option>
                                    <option value="0">Privato</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="container-weapon-selection">
    <h1 class="page-title text-center mb-4">Scegli un'Arma</h1>
    <div class="weapon-selection-box p-4 rounded-3">
        <div class="weapon-type-selector mb-4">
            <div class="btn-group w-100" role="group">
                <button type="button" class="btn btn-weapon-type active" data-type="spada">Spada</button>
                <button type="button" class="btn btn-weapon-type" data-type="spadone">Spadone</button>
                <button type="button" class="btn btn-weapon-type" data-type="catalizzatore">Catalizzatore</button>
                <button type="button" class="btn btn-weapon-type" data-type="lancia">Lancia</button>
                <button type="button" class="btn btn-weapon-type" data-type="arco">Arco</button>
            </div>
        </div>

        <div class="weapon-selection-content">
            <!-- Spada -->
            <div class="weapon-form-group" id="spada-group">
                <div class="weapon-select-card">
                    <img id="spada-img" src="/images/weapon-placeholder.png" alt="Anteprima spada" class="weapon-preview">
                    <div class="weapon-select-wrapper">
                        <select id="spada" class="form-select weapon-select">
                            <option value="">Seleziona un'arma...</option>
                            <% armi.spada.forEach(a=> { %>
                                <option value="<%= a.id %>" data-img="<%= a.immagine %>">
                                    <%= a.nome_arma %> (<%= a.rarità %>★)
                                </option>
                            <% }) %>
                        </select>
                        <i class="fas fa-chevron-down weapon-select-icon"></i>
                    </div>
                </div>
            </div>

            <!-- Ripeti per altri tipi di arma con lo stesso pattern -->
            <!-- Spadone -->
            <div class="weapon-form-group d-none" id="spadone-group">
                <!-- stesso struttura di spada-group -->
            </div>
            
            <!-- Catalizzatore -->
            <div class="weapon-form-group d-none" id="catalizzatore-group">
                <!-- stesso struttura di spada-group -->
            </div>
            
            <!-- Lancia -->
            <div class="weapon-form-group d-none" id="lancia-group">
                <!-- stesso struttura di spada-group -->
            </div>
            
            <!-- Arco -->
            <div class="weapon-form-group d-none" id="arco-group">
                <!-- stesso struttura di spada-group -->
            </div>
        </div>
    </div>
</div>

                </div>
            </div>
        </form>
    </div>
    <script src="\javascript\creaBuild.js"></script>
</body>
</html>