<!DOCTYPE html>
<html lang="en">

<head>
	<title>Build Genshin</title>
	<link rel="icon" href="images/icona.webp" />
	<meta charset="utf-8">
	<link rel="stylesheet" href="css/profilo.css">
	<link rel="stylesheet" href="css/personaggi.css">
	<link rel="stylesheet" href="css/style.css">
	<link rel="stylesheet" href="css/footer.css">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="colore-sfondo">
	<%- include('navbar-noRIc.ejs') %>
		<div class="main-container">
			<div class="riga-profilo d-flex justify-content-center align-items-center">
				<div class="profilo-box d-flex flex-column align-items-center">
					<img src="<%= utente.immagine %>" class="profilo-immagine" alt="Immagine del profilo"
						data-bs-toggle="modal" data-bs-target="#avatarModal">
					<p class="profilo-nome">
						<%= utente.username %>
					</p>
				</div>
			</div>
			<hr class="separatore">
			<div class="mie_build d-flex justify-content-center align-items-center">
				<h1>le mie build</h1>
			</div>

			<div class="container">
				<div class="row">
					<a class="col-lg-3 col-md-6">
						<div class="character-card add-character" data-bs-toggle="modal"
							data-bs-target="#createBuildModal">
							<div class="add-character-icon">+</div>
							<div class="add-character-text">Crea nuova Build</div>
						</div>
					</a>
				</div>
			</div>

			<!-- Modal per creazione nuova build -->
			<div class="modal fade" id="createBuildModal" tabindex="-1" aria-labelledby="createBuildModalLabel"
				aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered">
					<div class="modal-content build-modal-content">
						<div class="modal-header build-modal-header">
							<h5 class="modal-title" id="createBuildModalLabel">Crea Nuova Build</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>

						<div class="modal-body">
							<div class="d-flex justify-content-around flex-wrap gap-2">

								<!-- Bottone Personaggi -->
								<div class="dropdown">
									<button class="btn btn-primary dropdown-toggle" type="button"
										data-bs-toggle="dropdown" aria-expanded="false">
										Personaggi
									</button>
									<ul class="dropdown-menu">
										<li><a class="dropdown-item" href="#">Albedo</a></li>
										<li><a class="dropdown-item" href="#">Xiao</a></li>
										<li><a class="dropdown-item" href="#">Raiden</a></li>
									</ul>
								</div>

								<!-- Bottone Artefatti -->
								<div class="dropdown">
									<button class="btn btn-success dropdown-toggle" type="button"
										data-bs-toggle="dropdown" aria-expanded="false">
										Artefatti
									</button>
									<ul class="dropdown-menu">
										<li><a class="dropdown-item" href="#">Husk of Opulent Dreams</a></li>
										<li><a class="dropdown-item" href="#">Gladiator's Finale</a></li>
										<li><a class="dropdown-item" href="#">Viridescent Venerer</a></li>
									</ul>
								</div>

								<!-- Bottone Armi -->
								<div class="dropdown">
									<button class="btn btn-warning dropdown-toggle" type="button"
										data-bs-toggle="dropdown" aria-expanded="false">
										Armi
									</button>
									<ul class="dropdown-menu">
										<li><a class="dropdown-item" href="#">Primordial Jade Cutter</a></li>
										<li><a class="dropdown-item" href="#">Staff of Homa</a></li>
										<li><a class="dropdown-item" href="#">Skyward Blade</a></li>
									</ul>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>


			<div class="modal fade" id="avatarModal" tabindex="-1" aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered">
					<div class="modal-content">

						<div class="modal-header">
							<h5>Avatar di <%= utente.username %>
							</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							<div class="row">
								<% avatar.forEach((a)=> { %>
									<div class="col-md-4 mb-3 text-center">
										<form id="avatar" method="get" action="/profilo">
											<input type="hidden" name="avatarSelezionato" value="<%= a.id %>">
											<button type="submit" class="image-button-container">
												<img src="<%= a.immagine %>" class="circular-avatar">
											</button>
										</form>
									</div>
									<% }); %>
							</div>
						</div>
						<div class="justify-content-end popap-footer modal-header">
							<button type="button" class="btn btn-dark" data-bs-dismiss="modal">Chiudi</button>
						</div>

					</div>

				</div>
			</div>
		</div>

		<hr class="separatore">

		<div class="mie_build d-flex justify-content-center align-items-center">
			<h1>I miei Set di Artefatti</h1>
		</div>

		<div class="container">
			<div class="row">
				<a href="/set-artefatti" class="col-lg-3 col-md-6 text-decoration-none">
					<div class="character-card add-character">
						<div class="add-character-icon">+</div>
						<div class="add-character-text">Crea nuovo Set</div>
					</div>
				</a>
			</div>
		</div>

		<div class="container">
			<div class="row">
				<% setArtefatti.forEach(set=> { %>
					<div class="col-lg-3 col-md-6 mb-4">
						<div class="character-card text-center">
							<h5>
								<%= set.nome_set %>
							</h5>
							<p>
								<%= set.descrizione %>
							</p>
						</div>
					</div>
					<% }); %>
			</div>
		</div>


		<footer class="footer navbar-sfondo">
			<div class="container">
				<div class="row">
					<div class="col-md-3 align-items-center">
						<img src="images/icona.webp" class="footer-img">
					</div>
					<div class="col-md-3 align-items-center">
						<p class="footer-text">Build Genshin</p>
					</div>
					<div class="col-md-6 justify-content-end align-items-center">
						<p class="email-footer">Seguimi su instagram:</p>
						<p>matteo_dura</p>
						<p class="email-footer">Email:</p>
						<p>20050673@studenti.uniupo.it</p>
						<p class="email-footer">Â© 2024 Build Genshin. Tutti i diritti riservati.</p>
					</div>
				</div>
			</div>
		</footer>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
			crossorigin="anonymous"></script>
</body>

</html>