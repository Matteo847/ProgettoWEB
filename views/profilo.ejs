<!DOCTYPE html>
<html lang="en">
<head>
<title >Build Genshin</title>
<link rel="icon" href="images/icona.webp"/>
<meta charset="utf-8">
<link rel="stylesheet" href="css/profilo.css">
<link rel="stylesheet" href="css/personaggi.css">
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="css/footer.css">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="colore-sfondo">
	<nav class="navbar navbar-expand-lg navbar-light navbar-sfondo">
		<a class="navbar-brand navbar-genshin" href="">BUILD GENSHIN</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavDropdown">
		<ul class="navbar-nav ms-auto">
			<li class="nav-item">
				<a class="nav-link fs-5 navbar-destra" href="/">Log out</a>
			</li>
		</ul>
		</div>
	</nav>


    <div class="riga-profilo d-flex justify-content-center align-items-center">
        <div class="profilo-box d-flex flex-column align-items-center">
            <img src="<%= utenti.immagine %>" class="profilo-immagine" alt="Immagine del profilo" data-bs-toggle="modal" data-bs-target="#avatarModal">
            <p class="profilo-nome"><%= utenti.username %></p>
        </div>
    </div>
    <hr class="separatore">
    <div class="mie_build d-flex justify-content-center align-items-center">
        <h1>le mie build</h1>
    </div>
      <div class="container">
        <div class="row ">
			<div class="col-lg-3 col-md-6">
				<div class="character-card" data-bs-toggle="modal" data-bs-target="#characterModal-alhaitham">
				  <img src="/images/personaggi/alhaitham.png" class="character-container-build">
				  <div class="character-overlay">
					<div class="character-name">Alhaitham</div>
				  </div>
				</div>
			  </div>
			  
			  <div class="modal fade" id="characterModal-alhaitham" tabindex="-1" aria-labelledby="characterModalLabel" aria-hidden="true">
				<div class="modal-dialog modal-lg">
				  <div class="modal-content">
					<div class="modal-header">
					  <h5 class="modal-title" id="characterModalLabel">Alhaitham</h5>
					  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
					  <div class="row">
						<div class="col-md-4">
						  <img src="/images/personaggi/alhaitham.png" class="img-fluid">
						</div>
						<div class="col-md-8">
						  <h4>Informazioni sul personaggio</h4>
						  <p><strong>Elemento:</strong> Dendro</p>
						  <p><strong>Arma:</strong> Sword</p>
						  <p><strong>Rarità:</strong> ★★★★★</p>
						  <p><strong>Regione:</strong> Sumeru</p>
						  
						  <h4 class="mt-3">Build consigliate</h4>
						  <div class="build-options">
							<a href="/build/alhaitham/1" class="btn btn-success mb-2">Build DPS</a>
							<a href="/build/alhaitham/2" class="btn btn-success mb-2">Build Sub-DPS</a>
						  </div>
						</div>
					  </div>
					</div>
					<div class="modal-footer">
					  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
					  <a href="/personaggio/alhaitham" class="btn btn-primary">Visualizza dettagli</a>
					</div>
				  </div>
				</div>
			  </div>
			  
			  
			  <div class="col-lg-3 col-md-6">
				<div class="character-card">
				  <img src="/images/personaggi/alhaitham.png" class="character-container-build">
				  <div class="character-overlay">
					<div class="character-name">Alhaitham</div>
				  </div>
				</div>
			  </div>
			  <div class="col-lg-3 col-md-6">
				<div class="character-card">
				  <img src="/images/personaggi/alhaitham.png" class="character-container-build">
				  <div class="character-overlay">
					<div class="character-name">Alhaitham</div>
				  </div>
				</div>
			  </div>
			  <div class="col-lg-3 col-md-6">
				<div class="character-card">
				  <img src="/images/personaggi/alhaitham.png" class="character-container-build">
				  <div class="character-overlay">
					<div class="character-name">Alhaitham</div>
				  </div>
				</div>
			  </div>
        </div>
      </div>
    

	  <!-- Modal per l'immagine del profilo -->
	<div class="modal fade" id="avatarModal" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5>Avatar di <%= utenti.username %></h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="row">
				  <% avatar.forEach((a) => { %>
					<div class="col-md-4 mb-3 text-center">
					  <img src="<%= a.immagine %>" class="popap">
					</div>
				  <% }); %>
				</div>
			</div>
			<div class="justify-content-end popap-footer modal-header"> <!-- Allineamento a destra -->
				<button type="button" class="btn btn-dark" data-bs-dismiss="modal">Chiudi</button>
			</div>
		</div>
		</div>
	</div>


	  <footer class="footer navbar-sfondo">
		<div class="container">
			<div class="row">
				<div class="col-md-3 align-items-center">
					<img src="images/icona.webp" class="footer-img">
				</div>
				<div class="col-md-3 align-items-center">
					<p class="footer-text">Build Genshin</p>
				</div>
				<div class="col-md-6 justify-content-end align-items-center">
					<p class="email-footer">Seguimi su instagram:</p>
					<p>matteo_dura</p>
					<p class="email-footer">Email:</p>
					<p>20050673@studenti.uniupo.it</p>
					<p class="email-footer">© 2024 Build Genshin. Tutti i diritti riservati.</p>
				</div>
			</div>
		</div>
	</footer>
    
    




  
