<!DOCTYPE html>
<html lang="en">

<head>
	<title>Build Genshin</title>
	<link rel="icon" href="images/icona.webp" />
	<meta charset="utf-8">
    <link rel="stylesheet" href="css/gilda.css">
    <link rel="stylesheet" href="css/profilo.css">
	<link rel="stylesheet" href="css/style.css">
	<link rel="stylesheet" href="css/footer.css">

	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="colore-sfondo">
	<%- include('navbar-ric.ejs', {ricerca: 4}) %>

    <% if(mieGilde.length > 0){ %>
        <div class="mie_build d-flex justify-content-center align-items-center">
            <h1>le mie gilde</h1>
        </div>
        <hr class="separatore">
        <div class="container">
            <div class="row ">
                <% mieGilde.forEach((g) => { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                    <div class="gilda">
                        <h2><%= g.nome_gilda %></h2>
                        <p><%= g.descrizione_gilda %></p>
                        <a href="/mostraGilda?id=<%= g.id %>" class="bottone">Mostra questa gilda</a>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    <% } %>

    <% if(Membro.length > 0){ %>
    <div class="mie_build d-flex justify-content-center align-items-center">
		<h1>Gilde a cui sono iscritto</h1>
	</div>
    <hr class="separatore">
    <div class="container">
        <div class="row ">
            <% Membro.forEach((g) => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                <div class="gilda">
                    <h2><%= g.nome_gilda %></h2>
                    <p><%= g.descrizione_gilda %></p>
                    <a href="/mostraGilda?id=<%= g.id %>" class="bottone">Mostra questa gilda</a>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
    <% } %>
    
    <div class="text-center">
        <div class="container">
            <form id="filtro-elemento" method="get" action="/gilda">
                <div class="d-flex flex-wrap justify-content-center pt-4">
                    <button type="submit" name="lingua" class="btn-gilda btn-italia" value="italiano"></button>
                    <button type="submit" name="lingua" class="btn-gilda btn-inglese" value="inglese"></button>
                   <button type="submit" name="lingua" class="btn-gilda btn-giapponese" value="giapponese"></button>
                    <button type="submit" name="lingua" class="btn-gilda btn-cinese" value="cinese"></button>
                    <button type="submit" name="lingua" class="btn-gilda btn-coreano" value="coreano"></button>
                    <button type="submit" name="lingua" class="btn btn-outline-light ms-3" value="">Mostra tutti</button>
                </div>
            </form>
        </div>
    </div>
    <header>
        ⚔️ Scegli la tua Gilda in Genshin Impact ⚔️
    </header>
    <div class="container">
        <div class="row ">
            <% gilda.forEach((g) => { %>
                <div class="col-lg-4 col-md-6 mb-4">
                <div class="gilda">
                    <h2><%= g.nome_gilda %></h2>
                    <p><%= g.descrizione_gilda %></p>
                    <a href="/mostraGilda?id=<%= g.id %>" class="bottone">Mostra questa gilda</a>
                </div>
            </div>
            <% }); %>
        </div>
    </div>


<a href="/creaGilda" class="crea-gilda">Crea una gilda</a>
</body>