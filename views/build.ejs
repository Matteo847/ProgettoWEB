<!DOCTYPE html>
<html lang="en">

<head>
    <title>Build Genshin</title>
    <link rel="icon" href="images/icona.webp" />
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/footer.css">
    <link rel="stylesheet" href="css/build.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="colore-sfondo">
    <%- include('navbar-ric.ejs', {ricerca: 2}) %>

    <% if (!build || build.length===0) { %>
    <div class="col-md-12 text-center">
        <h2 class="nessun">Nessuna statistica presente</h2>
    </div>
    <% } %>

<% build.forEach((b) => {%>
    <div class="container-tutto">
        <div class="row ">
            <div class="col-lg-2">
                <div class="character-mini-profile">
                    <div class="character-face-frame">
                        <div class="character-face-mask">
                            <img src="<%= b.immagine %>" alt="Albedo"
                                class="character-face">
                        </div>
                    </div>
                    <div class="character-name"><%= b.nome_personaggio %></div>
                </div>
            </div>
            <div class="col-lg-4 justify-content-center">
                <div class="recommended-item">
                    <img src="<%= b.immagine_arma %>" alt="Primordial Jade Cutter"
                        class="item-icon weapon-icon">
                    <span class="item-name"><%= b.nome_arma %></span>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="recommended-item">
                            <img src="<%= b.immagine_artefatto1 %>"
                                alt="Husk of Opulent Dreams" class="item-icon artifact-icon">
                            <span class="item-name"><%= b.nome_artefatto1 %></span>
                        </div>
                        <div class="recommended-item">
                            <img src="/images/artifact/husk-of-opulent-dreams-flower.png"
                                alt="Husk of Opulent Dreams" class="item-icon artifact-icon">
                            <span class="item-name">Husk of Opulent Dreams</span>
                        </div>
                    </div>

                    <!-- Seconda colonna di artefatti -->
                    <div class="col-lg-6"> <!-- Cambiato da col-lg-3 a col-lg-6 -->
                        <div class="recommended-item">
                            <img src="/images/artifact/husk-of-opulent-dreams-flower.png"
                                alt="Husk of Opulent Dreams" class="item-icon artifact-icon">
                            <span class="item-name">Husk of Opulent Dreams</span>
                        </div>
                        <div class="recommended-item">
                            <img src="/images/artifact/husk-of-opulent-dreams-flower.png"
                                alt="Husk of Opulent Dreams" class="item-icon artifact-icon">
                            <span class="item-name">Husk of Opulent Dreams</span>
                        </div>
                    </div>
                </div>
                <div class="artifact-main-stats-container mt-3">
                    <div class="artifact-main-stats">
                        <div class="stat-details">
                            <p class="stat-type">Clessidra: <%= b.id_set %></p>
                            <p class="stat-type">Coppa: Danno Geo Bonus</p>
                            <p class="stat-type">Corona: Crit Rate/DMG/DEF%</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% }) %>
</body>